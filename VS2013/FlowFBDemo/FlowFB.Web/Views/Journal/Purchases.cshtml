@model FlowFB.Web.Models.PurchasesModel

@{
    ViewBag.Title = "Purchases";
}

<h2>Purchases</h2>
<div class="span12">
    <div class="widget">
        <div class="widget widget-table action-table">
            <div class="widget-header">
                <i class="icon-th-list"></i>
                <h3>Purchases Data</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Date Changed </th>
                            <th> Invoice No</th>
                            <th> Invoice Description</th>
                            <th> Purchase Invoice Total</th>
                            <th> Status</th>
                            <th> Comments</th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.Purchases)
                        {
                            <tr>
                                <td>@result.DateChanged.GetValueOrDefault().ToShortDateString()</td>
                                <td>@result.PurchaseInvoiceNumber</td>
                                <td>@result.PurchaseInvoiceDescription</td>
                                <td>@result.PurchaseInvoiceTotal.GetValueOrDefault().ToString()</td>
                                <td>@(result.Status == 7 ? "FB Deleted" : "FB Active")</td>
                                <td>@result.Comments</td>
                                <td class="td-actions"><a href="javascript:;" class="btn btn-small btn-success"><i class="btn-icon-only icon-ok"> </i></a><a href="javascript:;" class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div> <!-- /widget-content -->
        </div>
    </div> <!-- /widget-content -->
</div> <!-- /widget -->
