@model FlowFB.Web.Models.ContactsModel

@{
    ViewBag.Title = "Contacts";
}

<h2>Contacts</h2>

<div class="span12">
    <div class="widget">
        <div class="widget widget-table action-table">
            <div class="widget-header">
                <i class="icon-th-list"></i>
                <h3>Contacts</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> Name</th>
                            <th> Address</th>
                            <th class="td-actions"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.Contacts)
                        {
                            <tr>
                                <td>@result.Name</td>
                                <td>@result.Address</td>
                                <td class="td-actions">
                                    @Html.ActionLink("Invoices", "Purchases", routeValues: new { projectId = Request.QueryString["projectId"], tNA = result.TrimmedNA }, htmlAttributes: new { @class = "btn btn-small btn-success" } )
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div> <!-- /widget-content -->
        </div>
    </div> <!-- /widget-content -->
</div> <!-- /widget -->
